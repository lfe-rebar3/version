%% By default, use Github
{plugins, [
  {'lfe-compile',
    {git, "https://github.com/lfe-rebar3/compile.git", {tag, "0.8.0-rc1"}}}
  ]}.

{provider_hooks, [
  {pre, [{compile, {lfe, compile}}]}
  ]}.

{profiles, [
   %% Alternatively, you can use the Gitlab mirror with the following:
   %% $ rebar3 as gitlab compile
   {gitlab, [
     {deps, [
        {lfe, {git, "https://gitlab.com/lfe-rebar3/compile.git", {tag, "0.8.0-rc1"}}}]}
      ]},
   %% Or use Hex.pm instead with:
   %% $ rebar3 as hexpm compile
   {hexpm, [
     {deps, [
        {lfe, "0.8.0-rc1"}]}
      ]}
  ]}.
