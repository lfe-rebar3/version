{erl_opts, []}.

{deps, [
  {lfe, ".*", {git, "https://github.com/rvirding/lfe.git", {tag, "v0.10.0"}}},
  {lutil, ".*", {git, "https://github.com/lfex/lutil.git", {tag, "0.6.7"}}},
  {ltest, ".*", {git, "https://github.com/lfex/ltest.git", {tag, "0.6.4"}}}
  ]}.

{plugins, [
  {'lfe-compile', ".*",
    {git, "https://github.com/lfex-rebar3/compile.git", {tag, "0.2.0"}}}
  ]}.

{provider_hooks, [
  {pre, [{compile, {lfe, compile}}]}
  ]}.
